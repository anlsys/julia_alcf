#%Module1.0

proc ModulesHelp { } {
    puts stderr "Julia programming language version 1.11.7"
}

module-whatis "Julia programming language version 1.11.7"

set version "1.11.7"
set prefix /eagle/Julia/mschanen/soft/julia/julia-${version}

module unload xalt
conflict julia
conflict xalt

module load cuda/12
module load craype-accel-nvidia90
module load cray-hdf5-parallel

prepend-path PATH ${prefix}/bin
prepend-path MANPATH ${prefix}/share/man
prepend-path LIBRARY_PATH ${prefix}/lib
prepend-path LD_LIBRARY_PATH ${prefix}/lib
append-path JULIA_DEPOT_PATH ${prefix}/../depot

setenv HTTP_PROXY "http://proxy.alcf.anl.gov:3128"
setenv HTTPS_PROXY "http://proxy.alcf.anl.gov:3128"
setenv http_proxy "http://proxy.alcf.anl.gov:3128"
setenv https_proxy "http://proxy.alcf.anl.gov:3128"
setenv ftp_proxy "http://proxy.alcf.anl.gov:3128"

prepend-path LD_LIBRARY_PATH $env(CRAY_NVIDIA_PREFIX)/cuda/12.2/extras/CUPTI/lib64

setenv JULIA_CUDA_MEMORY_POOL "none"
setenv MPICH_GPU_SUPPORT_ENABLED "1"

if { [info exists env(CRAY_MPICH_DIR)] } {
    setenv JULIA_MPI_PATH $env(CRAY_MPICH_DIR)
}

setenv JULIA_MPI_HAS_CUDA "1"
